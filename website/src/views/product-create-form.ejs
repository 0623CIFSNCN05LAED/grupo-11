<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("partials/head", {title: "Formulario de creaciÃ³n"}) %>
    <script src="/js/creacionProducto.js" defer></script>
</head>
<body>
    <header>
        <!-- LOGO -->
        <%- include("partials/header")%>
    </header>

    <div>
        <h2 class="title">Formulario de creacion de productos</h2>
    </div>

    <form action="/products" method="post" enctype="multipart/form-data" id="createForm">
        <div>

            <div class="recorte-2">
                <label for="name" class="form-input">Nombre del producto:</label>
                <input type="text" id="name" name="name" placeholder="Ej: Buzo Novel">
                <span class="errorMsg" id="nameError"></span>
                <% if (locals.errors && errors.name) { %>
                    <div>
                        <p class="error-text"><%= errors.name.msg %></p>
                    </div>
                <% } %>
            </div>

            <div class="recorte-2">
                <label for="price" class="form-input">Precio del producto:</label>
                <input type="number" id="price" name="price" placeholder="Ej: 150">
                <span class="errorMsg" id="priceError"></span>
                <% if (locals.errors && errors.price) { %>
                    <div>
                        <p class="error-text"><%= errors.price.msg %></p>
                    </div>
                <% } %>
            </div>

            <div class="recorte-2">
                <label for="discount" class="form-input">Descuento:</label>
                <input type="number" id="discount" name="discount" placeholder="Ej: 10 off">
                <span class="errorMsg" id="discountError"></span>
                <% if (locals.errors && errors.discount) { %>
                    <div>
                        <p class="error-text"><%= errors.discount.msg %></p>
                    </div>
                <% } %>
            </div>

            <div class="recorte-2">
                <label for="image" class="form-input">Imagen:</label>
                <input type="file" name="image" id="image">
                <span class="errorMsg" id="imageError"></span>
                <% if (locals.errors && errors.image) { %>
                    <div>
                        <p class="error-text"><%= errors.image.msg %></p>
                    </div>
                <% } %>
            </div>

        </div>

        <div>
            <button type="submit">Guardar producto</button>
        </div>
    </form>

    <%- include("partials/burguerMenu") %>

    <footer>
        <%- include("partials/footer") %>
    </footer>
</body>
</html>