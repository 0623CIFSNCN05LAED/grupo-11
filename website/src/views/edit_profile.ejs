<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("partials/head", {title: "Formulario de ediciÃ³n"}) %>
    <script src="/js/editUser.js" defer></script>
</head>
<body>

    <!------------------------------------- HEADER ----------------------------------->
    <header>
        <%- include("partials/header") %>
    </header>

    <div>
        <h2 class="title">Editar usuario</h2>
    </div>

    <form action="/profile/<%= user.id %>?_method=put" method="post" id="editForm">
        <div>

            <div class="recorte-2">
                <label for="name" class="form-input">Nombre del usuario:</label>
                <input type="text" value="<%= user.name %>" id="name" name="name" placeholder="nombre">
                <span class="errorMsg" id="nameError"></span>
            </div>

            <div class="recorte-2">
                <label for="last_name" class="form-input">Apellido del usuario:</label>
                <input type="text" value="<%= user.last_name %>" id="last_name" name="last_name" placeholder="apellido">
                <span class="errorMsg" id="last_nameError"></span>
            </div>

            <div class="recorte-2">
                <label for="password" class="form-input">password:</label>
                <input type="password" value="<%= user.password %>" id="password" name="password" placeholder="password">
                <span class="errorMsg" id="passwordError"></span>
            </div>

        </div>

        <div>
            <button type="submit">Guardar usuario</button>
        </div>
    </form>
    <%- include("partials/burguerMenu") %>

    <!------------------------------------- FOOTER ----------------------------------->
    <footer>
        <%- include("partials/footer") %>
    </footer>
</body>
</html>