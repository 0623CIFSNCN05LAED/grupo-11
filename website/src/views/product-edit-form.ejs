<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("partials/head", {title: "Formulario de ediciÃ³n"}) %>
    <script src="/js/editarProducto.js" defer></script>
</head>
<body>

    <!------------------------------------- HEADER ----------------------------------->
    <header>
        <%- include("partials/header") %>
    </header>

    <div>
        <h2 class="title">Editar producto</h2>
    </div>

    <form action="/products/<%= product.id %>?_method=put" method="post" id="editForm" enctype="multipart/form-data">
        <div>

            <div class="recorte-2">
                <label for="name" class="form-input">Nombre del producto:</label>
                <input type="text" value="<%= product.product_name %>" id="name" name="name" placeholder="Ej: Buzo Novel">
                <span class="errorMsg" id="nameError"></span>
                <% if (locals.errors && errors.name) { %>
                    <div>
                        <p class="error-text"><%= errors.name.msg %></p>
                    </div>
                <% } %>
            </div>

            <div class="recorte-2">
                <label for="price" class="form-input">Precio del producto:</label>
                <input type="number" value="<%= product.price %>" id="price" name="price" placeholder="Ej: 150">
                <span class="errorMsg" id="priceError"></span>
                <% if (locals.errors && errors.price) { %>
                    <div>
                        <p class="error-text"><%= errors.price.msg %></p>
                    </div>
                <% } %>
            </div>

            <div class="recorte-2">
                <label for="discount" class="form-input">Descuento:</label>
                <input type="number" value="<%= product.discount %>" id="discount" name="discount" placeholder="Ej: 10 off">
                <span class="errorMsg" id="discountError"></span>
                <% if (locals.errors && errors.discount) { %>
                    <div>
                        <p class="error-text"><%= errors.discount.msg %></p>
                    </div>
                <% } %>

            </div>

            <div class="recorte-2">
                <label for="image" class="form-input">Imagen:</label>
                <input type="file" name="image" id="image">
                <span class="errorMsg" id="imageError"></span>
                <% if (locals.errors && errors.image) { %>
                    <div>
                        <p class="error-text"><%= errors.image.msg %></p>
                    </div>
                <% } %>
            </div>



        </div>

        <div>
            <button type="submit">Guardar producto</button>
        </div>
    </form>

    <%- include("partials/burguerMenu") %>

    <!------------------------------------- FOOTER ----------------------------------->
    <footer>
        <%- include("partials/footer") %>
    </footer>
</body>
</html>